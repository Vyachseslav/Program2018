<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:local="clr-namespace:Kachatel2018.Styles">

    <!-- Стиль для ProgressBar на главной форме. -->
    <Style TargetType="{x:Type ProgressBar}" x:Key="MainProgressBar">
        <Setter Property="Minimum" Value="0" />
        <Setter Property="Maximum" Value="100" />
        <Setter Property="Value" Value="0" />
        <Setter Property="Height" Value="20" />
        <Setter Property="Margin" Value="10,10,10,0" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>

    <!-- Стиль для подписей на главной форме. -->
    <Style TargetType="{x:Type TextBlock}" x:Key="MainProgressBarText">
        <Setter Property="FontWeight" Value="{DynamicResource FontWeightProgressBarText}" />
        <Setter Property="FontSize"   Value="{DynamicResource FontSizeProgressBarText}"   />
        <Setter Property="TextBlock.TextAlignment" Value="Justify" />
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Height" Value="20" />
        <!--<Setter Property="Margin" Value="43,11,309,11" />-->
        <Setter Property="Width" Value="Auto" />
    </Style>
</ResourceDictionary>